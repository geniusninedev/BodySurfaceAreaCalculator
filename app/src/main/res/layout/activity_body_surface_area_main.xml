<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_body_surface_area_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/bsaimage"
    android:orientation="vertical"
    tools:context="nineinfosys.bodysurfaceareacalculator.BodySurfaceAreaMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_toRightOf="@+id/textViewResult"
        android:layout_toEndOf="@+id/textViewResult"
        android:layout_marginBottom="50dp">

        <EditText
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/editTextHeight"
            android:layout_alignRight="@+id/editTextHeight"
            android:layout_alignEnd="@+id/editTextHeight"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="45dp"
            android:id="@+id/editTextWeight"
            android:hint="Enter Weight (In Kg):"
            android:textColorHint="@android:color/black"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="45dp"
            android:id="@+id/editTextHeight"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Enter Height (In cm):"
            android:textColorHint="@android:color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/textViewResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CalculateBodySurfceArea"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_below="@+id/editTextWeight"
            android:layout_alignRight="@+id/editTextWeight"
            android:layout_alignEnd="@+id/editTextWeight"

            android:layout_weight="1" />

        <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/buttonClear"
            android:layout_alignBaseline="@+id/CalculateBodySurfceArea"
            android:layout_alignBottom="@+id/CalculateBodySurfceArea"
            android:layout_toRightOf="@+id/CalculateBodySurfceArea"
            android:layout_toEndOf="@+id/CalculateBodySurfceArea"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResult"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
           android:textSize="20dp"
            android:textColor="@color/colorAccent"

            android:gravity="center"
            android:layout_weight="0.17" />
    </LinearLayout>
</LinearLayout>
